<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">


    <ImageView
        android:id="@+id/coinImage"
        android:layout_width="@dimen/coin_image_size"
        android:layout_height="@dimen/coin_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coinImage"
        android:layout_toStartOf="@+id/coinPrice"
        android:height="20dp"

        android:paddingLeft="10dp"
        android:textColor="@color/coin_title_color"
        android:textSize="@dimen/coin_title_size" />

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinName"
        android:layout_toEndOf="@+id/coinImage"
        android:layout_toStartOf="@+id/coinPrice"
        android:height="20dp"

        android:paddingLeft="10dp"
        android:textColor="@color/coin_subtitle_color"
        android:textSize="@dimen/coin_subtitle_size" />

    <TextView
        android:id="@+id/coinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coinSymbol"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"/>


</RelativeLayout>